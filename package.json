{
  "name": "restaurant-recommendation-agent",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:down": "docker compose down --remove-orphans",
    "db:destroy": "docker compose down -v --remove-orphans",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:studio": "dotenv -e .env -- prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "dev:full": "concurrently -k -n \"APP,DB,STUDIO\" -c \"blue,green,magenta\" \"bun run dev\" \"docker compose up postgres\" \"bun run db:studio\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/eslint": "1.10.0",
    "@nuxt/hints": "1.0.0-alpha.1",
    "@nuxt/image": "2.0.0",
    "@nuxt/ui": "4.1.0",
    "@nuxtjs/seo": "3.2.2",
    "@prisma/client": "^6.19.0",
    "@vueuse/motion": "^3.0.3",
    "@vueuse/nuxt": "14.0.0",
    "better-auth": "^1.3.34",
    "eslint": "^9.0.0",
    "nodemailer": "^7.0.10",
    "nuxt": "^4.2.1",
    "nuxt-security": "2.4.0",
    "typescript": "^5.6.3",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "zod": "^4.1.12"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "unrs-resolver"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@pinia/nuxt": "^0.11.3",
    "@types/nodemailer": "^7.0.3",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prisma": "^6.19.0"
  },
  "lint-staged": {
    "*.{ts,vue,js,json}": [
      "bun lint"
    ]
  }
}
